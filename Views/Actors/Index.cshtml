@model IEnumerable<Cinema.Models.Actor>

@{
    ViewData["Title"] = "List of Actors";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="text-center mb-4 text-warning fw-bold">@ViewData["Title"]</h2>
    <div class="text-end mb-3">
        <a class="btn btn-warning fw-bold" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Add New Actor
        </a>
    </div>

    <table class="table table-hover table-dark align-middle text-center shadow-sm">
        <thead>
            <tr>
                <th>Profile</th>
                <th>Full Name</th>
                <th>Bio</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.ProfilePictureURL" class="rounded-circle border border-warning" style="max-width:100px;" alt="@item.FullName" />
                    </td>
                    <td>@item.FullName</td>
                    <td>@item.Bio</td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm mx-1" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a class="btn btn-outline-info btn-sm mx-1" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <a class="btn btn-outline-danger btn-sm mx-1 text-white" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
