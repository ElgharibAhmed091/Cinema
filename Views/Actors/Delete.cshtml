@model Cinema.Models.Actor

@{
    ViewData["Title"] = "Delete Actor";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container d-flex align-items-center justify-content-center min-vh-100 bg-dark text-light">
    <div class="card shadow-lg border-0 p-4" style="max-width: 600px; width:100%; background-color:#1c1c1c;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-danger"><i class="bi bi-exclamation-triangle"></i> Confirm Delete</h3>
            <p class="text-muted">Are you sure you want to delete this actor?</p>
        </div>

        <div class="text-center mb-3">
            <img src="@Model.ProfilePictureURL" alt="@Model.FullName"
                 class="rounded-circle border border-danger shadow-sm"
                 style="width:150px; height:150px; object-fit:cover;" />
        </div>

        <dl class="row text-light">
            <dt class="col-sm-4 fw-semibold">Full Name</dt>
            <dd class="col-sm-8">@Model.FullName</dd>

            <dt class="col-sm-4 fw-semibold">Biography</dt>
            <dd class="col-sm-8">@Model.Bio</dd>
        </dl>

        <div class="d-flex justify-content-between mt-4">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger fw-bold">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </form>
            <a asp-action="Index" class="btn btn-outline-light">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
