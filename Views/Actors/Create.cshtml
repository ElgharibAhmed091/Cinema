@model Actor

@{
    ViewData["Title"] = "Add a new actor";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container d-flex align-items-center justify-content-center min-vh-100 bg-dark text-light">
    <div class="card shadow-lg border-0 p-4" style="max-width: 500px; width:100%; background-color:#1c1c1c;">
        <h3 class="text-center mb-4 fw-bold">Add a New Actor</h3>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group text-center mb-3">
                <img id="ProfilePicturePreview" class="border-warning rounded-circle" style="max-width:150px;" />
            </div>

            <div class="mb-3">
                <label asp-for="ProfilePictureURL" class="form-label fw-semibold">Profile Picture URL</label>
                <input asp-for="ProfilePictureURL" class="form-control bg-secondary text-light border-0" placeholder="Enter image URL" />
                <span asp-validation-for="ProfilePictureURL" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-semibold">Full Name</label>
                <input asp-for="FullName" class="form-control bg-secondary text-light border-0" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Bio" class="form-label fw-semibold">Biography</label>
                <textarea asp-for="Bio" class="form-control bg-secondary text-light border-0" rows="3"></textarea>
                <span asp-validation-for="Bio" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between">
                <input type="submit" value="Create" class="btn btn-warning fw-bold" />
                <a class="btn btn-outline-light" asp-action="Index">Show All</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var profilePictureURL = $("#ProfilePictureURL").val();
            if (profilePictureURL) {
                $("#ProfilePicturePreview").attr("src", profilePictureURL);
            }
        });

        $("#ProfilePictureURL").on("input", function () {
            var newProfilePictureURL = $(this).val();
            $("#ProfilePicturePreview").attr("src", newProfilePictureURL);
        });
    </script>
}
