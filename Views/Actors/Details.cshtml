@model Cinema.Models.Actor

@{
    ViewData["Title"] = "Actor Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container d-flex align-items-center justify-content-center min-vh-100 bg-dark text-light">
    <div class="card shadow-lg border-0 p-4" style="max-width: 600px; width:100%; background-color:white;">
        <div class="text-center">
            <img src="@Model.ProfilePictureURL" alt="@Model.FullName" class="rounded-circle border border-warning mb-3" style="width:150px; height:150px; object-fit:cover;" />
            <h2 class="fw-bold">@Model.FullName</h2>
        </div>

        <hr class="border-secondary" />

        <div class="mb-3">
            <h6 class="text-warning"><i class="bi bi-person-lines-fill"></i> Full Name</h6>
            <p class="mb-0">@Model.FullName</p>
        </div>

        <div class="mb-3">
            <h6 class="text-warning"><i class="bi bi-file-earmark-text"></i> Biography</h6>
            <p class="mb-0">@Model.Bio</p>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning fw-bold">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-light">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
