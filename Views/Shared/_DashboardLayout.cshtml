<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-dark text-white p-3" style="width: 250px; min-height: 100vh;">
            <h3>🎬 Dashboard</h3>
            <ul class="nav flex-column mt-4">
                <li class="nav-item"><a class="nav-link text-white" asp-controller="MoviesDashboard" asp-action="Index">📊 الأفلام</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Orders" asp-action="Index">🛒 الطلبات</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Users" asp-action="Index">👥 المستخدمين</a></li>
            </ul>
        </div>

        <!-- Main -->
        <div class="flex-grow-1 p-4">
            @RenderBody()
        </div>
    </div>
</body>
</html>
