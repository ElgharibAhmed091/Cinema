@* Register View *@
@model Cinema.Controllers.AccountController.RegisterViewModel
@{
    ViewData["Title"] = "إنشاء حساب جديد";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100 bg-dark text-light">
    <div class="card shadow-lg border-0 p-4" style="max-width: 450px; width: 100%; background-color:#1c1c1c;">
        <div class="text-center mb-4">
            <img src="~/images/تنزيل.jpeg" alt="Login Icon" style="height: 110px;" class="rounded-circle border border-warning p-1" />
            <h4 class="fw-bold mt-3">إنشاء حساب جديد</h4>
        </div>

        <form asp-action="Register" method="post" novalidate>
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">البريد الإلكتروني</label>
                <input asp-for="Email" class="form-control bg-secondary text-light border-0" placeholder="example@email.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold">كلمة المرور</label>
                <input asp-for="Password" class="form-control bg-secondary text-light border-0" type="password" placeholder="********" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label fw-semibold">تأكيد كلمة المرور</label>
                <input asp-for="ConfirmPassword" class="form-control bg-secondary text-light border-0" type="password" placeholder="********" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-warning w-100 fw-bold text-dark">
                تسجيل
            </button>
        </form>

        <div class="text-center mt-4">
            <p class="small">لديك حساب؟ <a asp-controller="Account" asp-action="Login" class="text-warning fw-semibold">سجّل الدخول الآن</a></p>
        </div>
    </div>
</div>