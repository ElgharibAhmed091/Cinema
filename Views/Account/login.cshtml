@* Login View *@
@model Cinema.Controllers.AccountController.LoginViewModel
@{
    ViewData["Title"] = "تسجيل الدخول";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container d-flex align-items-center justify-content-center min-vh-100 bg-dark text-light">
    <div class="card shadow-lg border-0 p-4" style="max-width: 400px; width: 100%; background-color:#1c1c1c;">
        <div class="text-center mb-4">
            <img src="~/images/تنزيل.jpeg" alt="Login Icon" style="height: 110px;" class="rounded-circle border border-warning p-1" />
            <h4 class="fw-bold mt-3">تسجيل الدخول إلى حسابك</h4>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.LoginError as string))
        {
            <div class="alert alert-danger text-center fw-semibold">@ViewBag.LoginError</div>
        }

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">البريد الإلكتروني</label>
                <input asp-for="Email" class="form-control bg-secondary text-light border-0" placeholder="example@email.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="form-label fw-semibold">كلمة المرور</label>
                <input asp-for="Password" class="form-control bg-secondary text-light border-0" type="password" placeholder="********" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-warning w-100 fw-bold text-dark">
                دخول
            </button>
        </form>

        <div class="text-center mt-4">
            <p class="small">ليس لديك حساب؟ <a asp-controller="Account" asp-action="Register" class="text-warning fw-semibold">سجّل الآن</a></p>
        </div>
    </div>
</div>