@model IEnumerable<Cinema.Models.CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
    var total = Model.Sum(item => item.Movie.Price * item.Quantity);
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4 text-warning"><i class="bi bi-cart4"></i> Your Cart</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center fw-bold">
            Your cart is currently empty.
        </div>
    }
    else
    {
        <table class="table table-dark table-hover align-middle shadow-sm text-center">
            <thead class="table-secondary text-dark">
                <tr>
                    <th>Image</th>
                    <th>Movie Name</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.Movie?.ImageURL" alt="@item.Movie?.Name" class="img-thumbnail rounded" style="width: 100px;" />
                        </td>
                        <td class="fw-bold">@item.Movie?.Name</td>
                        <td>$@item.Movie.Price</td>
                        <td>
                            <form asp-action="UpdateQuantity" method="post" class="d-flex justify-content-center align-items-center">
                                <input type="hidden" name="cartItemId" value="@item.Id" />
                                <button type="submit" name="change" value="decrease" class="btn btn-sm btn-warning">-</button>
                                <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control mx-2 text-center" style="width: 60px; background-color:#2a2a2a; color:white;" />
                                <button type="submit" name="change" value="increase" class="btn btn-sm btn-warning">+</button>
                            </form>
                        </td>
                        <td class="text-success fw-semibold">$@(item.Movie.Price* item.Quantity)</td>
                        <td>
                            <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Remove
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <h4 class="text-warning">Total Amount: <span class="text-success fw-bold">$@total</span></h4>

            <form asp-controller="Payment" asp-action="CreateCheckoutSession" method="post">
                @foreach (var item in Model)
                {
                    <input type="hidden" name="movieIds" value="@item.MovieId" />
                }
                <button type="submit" class="btn btn-primary btn-lg fw-bold">
                    💳 Checkout All Movies
                </button>
            </form>
        </div>
    }
</div>
