@model IEnumerable<Cinema.Models.Movie>

<div class="container mt-5">
    <h1 class="text-center mb-4 text-warning">🎬 Movies List</h1>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success fw-bold">
            <i class="bi bi-plus-circle"></i> Add New Movie
        </a>
    </div>

    <table class="table table-dark table-hover align-middle text-center shadow-sm">
        <thead class="table-secondary text-dark">
            <tr>
                <th>Poster</th>
                <th>Name</th>
                <th>Price</th>
                <th>Cinema</th>
                <th>Producer</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.ImageURL" alt="@item.Name" class="img-thumbnail rounded" style="width: 80px;" />
                    </td>
                    <td class="fw-semibold">@item.Name</td>
                    <td class="text-success fw-bold">$@item.Price</td>
                    <td>@item.Cinema?.Name</td>
                    <td>@item.Producer?.FullName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mb-1">✏️ Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mb-1">🔍 Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mb-1">🗑 Delete</a>

                      @*   <form asp-controller="Payment" asp-action="CreateCheckoutSession" method="post" class="d-inline">
                            <input type="hidden" name="movieId" value="@item.Id" />
                            <button type="submit" class="btn btn-primary btn-sm mb-1">💳 Buy - $@item.Price</button>
                        </form> *@

                        <form asp-controller="Cart" asp-action="Add" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-success btn-sm mb-1">🛒 Add to Cart</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
