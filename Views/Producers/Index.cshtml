@model IEnumerable<Cinema.Models.Producer>

<div class="container mt-5">
    <h1 class="text-center mb-4 text-warning">🎬 Producers List</h1>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success fw-bold">
            <i class="bi bi-plus-circle"></i> Add New Producer
        </a>
    </div>

    <table class="table table-dark table-hover align-middle text-center shadow-sm">
        <thead class="table-secondary text-dark">
            <tr>
                <th>Profile Picture</th>
                <th>Full Name</th>
                <th>Bio</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.ProfilePictureURL" alt="@item.FullName" class="img-thumbnail rounded-circle" style="width: 80px;" />
                    </td>
                    <td class="fw-semibold">@item.FullName</td>
                    <td>@item.Bio</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mb-1">✏️ Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mb-1">🔍 Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mb-1">🗑 Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
