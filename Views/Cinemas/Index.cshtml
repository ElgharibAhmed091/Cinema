@model IEnumerable<Cinema.Models.Cinemas>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <h2 class="text-center mb-4 text-warning">Cinemas List</h2>

            <div class="text-end mb-3">
                <a class="btn btn-success fw-bold" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> Add New Cinema
                </a>
            </div>

            <table class="table table-dark table-hover text-center shadow-sm align-middle">
                <thead class="table-secondary text-dark">
                    <tr>
                        <th>Logo</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.Logo" alt="@item.Name" class="rounded-circle img-thumbnail" style="max-width: 100px;" />
                            </td>
                            <td class="fw-semibold">@item.Name</td>
                            <td>@item.Description</td>
                            <td>
                                <a class="btn btn-outline-primary btn-sm mx-1" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-outline-info btn-sm mx-1" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a class="btn btn-danger btn-sm mx-1 text-white" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
